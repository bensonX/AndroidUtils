<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roc.androidutils"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- Junit单元测试 targetPackage为程序包名 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.example.androidutils"></instrumentation>

    <application
        android:name="com.roc.app.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="AndroidUtils"
        android:theme="@android:style/Theme.Light">

        <!-- androidutils -->
        <activity
            android:name="com.roc.androidutils.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Junit单元测试 -->
        <uses-library android:name="android.test.runner" />
        <!-- test基本测试包 -->
        <activity android:name="com.roc.test.TestActivity"></activity>
        <activity android:name="com.roc.test.OtherActivity"></activity>
        <!-- Dialog包 -->
        <activity android:name="com.roc.widget.dialog.DialogTestActivity"></activity>
        <!-- Utils包 -->
        <activity
            android:name="com.roc.utils.UtilsTestAvtivity"
            android:label="UtilsTestAvtivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
        <!-- Animation包 -->
        <activity android:name="com.roc.animation.AnimationTestActivity"></activity>
        <!-- IO包 -->
        <activity android:name="com.roc.io.LruCacheTestActivity"></activity>
        <!-- 检查更新包 -->
        <activity
            android:name="com.roc.update.UpdateTestActivity"
            android:label="UpdateTestActivity"></activity>
        <!-- 注解Annotation包 -->
        <activity
            android:name="com.roc.annotation.AnnotationTestActivity"
            android:label="AnnotationTestActivity"></activity>
        <!-- Widget ListView -->
        <activity
            android:name="com.roc.widget.listview.XListViewTestActivity"
            android:label="XListViewTestActivity"></activity>
        <!-- 服务包 -->
        <service android:name="com.roc.update.UpdateService">
            <intent-filter>
                <action android:name="com.roc.service.UPDATE_SERVICE" />
            </intent-filter>
        </service>
        <!-- http包 -->
        <activity android:name="com.roc.http.volley.HttpVolleyTestActivity"></activity>
        <!-- content包 -->
        <activity android:name="com.roc.content.ContentTestActivity"></activity>
        <!--drawable包-->
        <activity android:name="com.roc.drawable.DrawableTestActivity"></activity>
    </application>

</manifest>